{
    // code here
    if(n){
        if(arr[0]){
            return 0;
        }
    }
    int i=0;
    int j=1;
    int ans;
    while(j<n){
        if(arr[i]^arr[j]){
            ans=j;
            return ans;
        }
        else{
            i++;
            j++;
        }
    }
    return -1;
}
